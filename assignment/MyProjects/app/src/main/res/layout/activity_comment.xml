<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.nguyenthanhvinh_5120.myprojects.CommentActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/un"
        android:id="@+id/tvUserComment"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:layout_alignBottom="@+id/edtComment"
        android:textColor="#110fff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtComment"
        android:hint="Viết bình luận..."
        android:layout_above="@+id/lvComment"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/btnComment2"
        android:layout_toRightOf="@+id/tvUserComment" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/comm"
        android:id="@+id/btnComment2"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lvComment"
        android:layout_below="@+id/btnComment2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:focusable="false"/>

</RelativeLayout>
